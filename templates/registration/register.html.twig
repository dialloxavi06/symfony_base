<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Clothing and Shoes</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Add your custom styles here -->
    <style>
        body {
            padding-top: 70px; /* Adjust based on your design */
        }

        .navbar {
            background-color: #87CEEB; /* Bleu ciel */
        }

        .navbar-brand {
            font-size: 2rem; /* Taille de la police plus grande */
            color: #333; /* Couleur du texte de la marque */
        }

        .navbar-nav .nav-item {
            margin-right: 15px;
        }

        .nav-link {
            color: #333;
            transition: color 0.3s;
            font-size: 1.2rem; /* Taille de la police plus grande */
        }

        .nav-link:hover,
        .nav-link.active {
            color: #007bff; /* Bootstrap primary color */
        }
    </style>
</head>

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm._token) }} {# Ajoutez cette ligne pour inclure le champ CSRF #}

                    <div class="mb-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Inscription</button>
                {{ form_end(registrationForm) }}

                <p class="mt-3">
                    Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici</a>.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
